@using FileUpload.Web.Models

@model ImageViewModel

@if (Model.Validated != "true")
{
    <form action="/home/viewimage">
        <h1>@(Model.Validated == null ? "Enter Password" : "Incorrect Password. Please reenter password")</h1>
        <input name="password" />
        <input type="hidden" value=@Model.Image.Id name="id" />
        <button>Submit</button>
    </form>
}
else 
{
    <img src="/uploads/@Model.Image.ImagePath" style="height:300px;" />
    <h1>Views: @Model.Image.Views</h1>
}


